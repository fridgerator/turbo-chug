{
    "name": "turbo-chug-avro-sr-connector",
    "config": {
        "connector.class": "com.mongodb.kafka.connect.MongoSinkConnector",
        "key.converter": "org.apache.kafka.connect.storage.StringConverter",
        "value.converter": "org.fridgerator.AvroBytesConverter",
        "connection.uri":"mongodb://mongodb:27017/ginormitron",
        "tasks.max": "10",
        "topics": "avro-bytes-topic",
        "flush.size": "5",
        "rotate.interval.ms": "1000",
        "database": "ginormitron",
        "collection": "avro-bytes-topic-collection"
    }
}